{
  "name": "nestjs-base-service",
  "version": "0.9.1",
  "description": "An opinionated base service for NestJS apps",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/nestjs-base-service.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "yarn run clean && tsc --project tsconfig.build.json",
    "test": "jest --config test/jest-config.json -i",
    "test:cov": "jest --config test/jest-config.json --coverage",
    "prepublishOnly": "tsc --project .",
    "lint": "eslint 'src/**/**.ts' --fix --ignore-pattern 'src/**/*.spec.ts'",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
  },
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "dist"
  ],
  "engines": {
    "node": ">=14.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "dependencies": {
    "class-validator": "0.14.0",
    "express": "4.18.2",
    "lodash": "4.17.21",
    "nestjs-typeorm-paginate": "4.0.3",
    "typescript": "4.9.4"
  },
  "peerDependency": {
    "typeorm": "^0.3.11",
    "@nestjs/common": "^9.2.1"
  },
  "devDependencies": {
    "@nestjs/common": "9.2.1",
    "@nestjs/core": "9.2.1",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.14",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "node-mocks-http": "^1.12.1",
    "prettier": "^2.8.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typeorm": "0.3.11"
  },
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com"
  }
}
