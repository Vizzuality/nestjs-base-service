{
  "name": "nestjs-base-service",
  "version": "0.4.0",
  "description": "An opinionated base service for NestJS apps",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/nestjs-base-service.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project .",
    "prepublishOnly": "tsc --project .",
    "lint": "eslint 'src/**/**.ts' --fix --ignore-pattern 'src/**/*.spec.ts'",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
  },
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "dependencies": {
    "@nestjs/common": "7.6.5",
    "class-validator": "0.13.1",
    "express": "^4.17.1",
    "nestjs-typeorm-paginate": "2.2.6",
    "typeorm": "0.2.30",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "14.14.20",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1"
  },
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com"
  }
}
