{
  "name": "nestjs-base-service",
  "version": "0.8.1",
  "description": "An opinionated base service for NestJS apps",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/nestjs-base-service.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean" : "rimraf dist/",
    "build": "yarn run clean && tsc --project tsconfig.build.json",
    "test": "jest --config test/jest-config.json -i",
    "test:cov": "jest --config test/jest-config.json --coverage",
    "prepublishOnly": "tsc --project .",
    "lint": "eslint 'src/**/**.ts' --fix --ignore-pattern 'src/**/*.spec.ts'",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
  },
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "dist"
  ],
  "engines": {
    "node": ">14.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "dependencies": {
    "@nestjs/common": "8.1.2",
    "class-validator": "0.13.1",
    "express": "4.17.1",
    "lodash": "4.17.21",
    "nestjs-typeorm-paginate": "2.2.6",
    "typescript": "4.4.4"
  },
  "peerDependency": {
    "typeorm": "0.2.30"
  },
  "devDependencies": {
    "@nestjs/core": "8.1.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/node": "^14.17.32",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "typeorm": "0.2.30"
  },
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com"
  }
}
